# Slack App Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Claude Code Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Working Directory Configuration
# Not needed for this bot - it uses web search, not file system access
# BASE_DIRECTORY=/Users/username/Code/

# Bot Behavior
# Set to true to enable debug logging
DEBUG=false

# Scheduled Search Configuration
# Channel ID where the bot will post listings (get from Slack - right click channel > View channel details > scroll to bottom)
SEARCH_CHANNEL_ID=your-channel-id
# How often to search (in hours) - e.g., 6 = every 6 hours, 24 = once daily
SEARCH_INTERVAL_HOURS=6
